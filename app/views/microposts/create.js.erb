<% if @micropost.errors.any? %>
  alert('errors');
<% else %>
	    $('.microposts').prepend("<%= escape_javascript(render :partial => 'shared/feed_item', object: @micropost) %>");
	    $('li.micropost').each(function() {
		  var nlform, nlid;
		  nlid = $(this).data('url');
		  if ($("p#check" + nlid).length === 0) {
		    nlform = new NLForm(document.getElementById("post" + nlid));
		  }
		  $(function() {
		    return $("li#post" + nlid + " form input").keyup(function() {
		      $("span#author" + nlid).hide();
		      $("span#tags" + nlid).fadeIn();
		      return $("div.nl-submit-wrap#submit" + nlid).fadeIn();
		    });
		  });
		  $("#btn" + nlid).click(function(event) {
		    var kutext;
		    kutext = $("li#post" + nlid + " span.content").data('url');
		    $("span#author" + nlid).slideDown();
		    $("span#tags" + nlid).slideUp();
		    return $("div.nl-submit-wrap#submit" + nlid).fadeOut(1300, function() {
		      $("#post" + nlid + " a.nl-field-toggle").text(kutext);
		      if ($("button.more").length !== 0) {
		        return $("li.micropost").last().slideUp("slow", function() {
		          return $("li.micropost").last().remove();
		        });
		      }
		    });
		  });
		  $(function() {
		    return $("i#clicker" + nlid).click(function() {
		      return SelectText("selectme" + nlid);
		    });
		  });
		});
	    $("#postcount").text("You've made <%= pluralize(current_user.microposts.count, "promptku") %>!");
	    $('.microposts').children(':first').hide().slideDown();
	    $('div.field textarea#micropost_content').val("");
	    $('div.field textarea#micropost_content1').val("");
	    $('div.field input#micropost_tag_list').val("");
	    $('.nl-ti-text ul li.nl-ti-input input').val("");
	    $('span.noposts').fadeOut("slow");
<% end %>