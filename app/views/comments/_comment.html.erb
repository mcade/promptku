<li id="comment<%= comment.id %>">
	<%= link_to gravatar_for(comment.user), comment.user %>
    <span class="user"><%= link_to comment.user.name, comment.user %></span>
	<span class="content"><%= wrap(comment.comment_content) %></span>
	<span class="timestamp">Posted <%= time_ago_in_words(comment.created_at) %> ago.</span>
	<% if current_user?(comment.user) %>
    <%= link_to "delete", micropost_comment_path(comment.micropost.id, comment.id), method: :delete, :remote => true,
                                     data: { confirm: "You sure?" },
                                     title: comment.comment_content %>
  	<% end %>



</li>