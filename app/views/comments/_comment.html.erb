<li id="comment<%= comment.id %>">
	<% if comment.user.image.url == nil %>
		<%= link_to image_tag("promptkuface.svg", alt: "Promptku Smiley"), comment.user %>
	<% else %>
		<%= link_to image_tag(comment.user.image_url.to_s), comment.user %>
	<% end %>
    <span class="usercomment"><%= link_to comment.user.name, comment.user %></span>
	<span class="content"><%= wrap(comment.comment_content) %></span>
	<span class="timestamp">Posted <%= time_ago_in_words(comment.created_at) %> ago.</span>
	<% if current_user?(comment.user) %>
    <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, micropost_comment_path(comment.micropost.id, comment.id), method: :delete, :remote => true,
                                     data: { confirm: "You sure?" },
                                     :title => "delete",
                                     :class => 'delete' %>
  	<% end %>



</li>