<% if @feed_items.any? %>
  <ol class="microposts">
    <%= render partial: 'shared/feed_item', collection: @feed_items %>
  </ol>
  <% unless (params[:page].present? || @feed_items.count <25) %>
	<button class = "more">Show More</button>
  <% end %>
  	<%= paginate @feed_items %>
<% else %>
	<span class="span8 nopost">There's nothing here yet.</span>
<% end %>

