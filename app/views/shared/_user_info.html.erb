<%= link_to gravatar_for(current_user, size: 52), current_user %>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
	(<%= pluralize(current_user.reputation_for(:votes).to_i, "vote") %>)
</span>
<span>
  <%= pluralize(current_user.microposts.count, "micropost") %>
</span>
<span>
  <%= link_to "likes", likes_micropost_path(current_user) %>
</span>