<% if current_user.image.url == nil %>
	<%= image_tag("promptkuface.svg", alt: "Promptku Smiley") %>
<% else %>
	<%= image_tag current_user.image_url.to_s %>
<% end %>
<br>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
	(<%= pluralize(current_user.reputation_for(:votes).to_i, "vote") %>)
</span>
<span id="postcount">
  <%= pluralize(current_user.microposts.count, "promptku") %>
</span>
<span>
  <%= link_to "likes", likes_micropost_path(current_user) %>
</span>