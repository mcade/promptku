<li id="post<%= feed_item.id %>" class="micropost">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content">
      <%= link_to "#{wrap(feed_item.content)}", microposts_path(show: "matching_prompts", content: feed_item.content) %>
      <%= form_for((@micropost), :method => "post", :url => microposts_path, :remote => true) do |f| %>  
      <!-- add this to change from edit_>>>  , :html => { :id => "new_micropost", :class => "new_micropost" }-->     
        <%= f.hidden_field :content, :value => feed_item.content %>
        <%= f.hidden_field :tag_list, :value => feed_item.tag_list%>
        <%= f.text_area :content1, placeholder: feed_item.content1 %>
        <%= f.submit "Post", class: "btn btn-large btn-primary" %>
      <% end %>
      <p>Tags: <%= raw feed_item.tag_list.map { |t| link_to t, tag_path(t) }.join(' ') %></p>
      <div id="vote<%= feed_item.id %>">
        <%= pluralize feed_item.reputation_for(:votes).to_i, "vote" %>
        <% unless feed_item.user.id == current_user.id %>
          <%= link_to "up", vote_micropost_path(feed_item,  type: "up"), :method => :post, :remote => true %>
          <%= link_to "down", vote_micropost_path(feed_item,  type: "down"), :method => :post, :remote => true %>
        <% end %>
      </div>
    </span>
    <span id="retweet<%= feed_item.id %>">
      <%= link_to "Retweet", retweet_micropost_path(feed_item), :method => :post, :remote => true %>
    </span><span>
      <%= link_to "Comments", feed_item %>
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     :remote=>true,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
</li>