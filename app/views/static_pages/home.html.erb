<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>promptku feed</h3>
      <%= render 'shared/home_feed' %>
      <% unless (params[:page].present? || @feed_items.count <10) %>
        <button class = "more btn btn-large btn-info">Show More</button>
      <% end %>
      <%= paginate @feed_items %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1 class="welcome">Welcome to <span class="prompt">prompt<span class="kulogo">ku</span></span></h1>

    <h2 class="example">
      Finish each other's <span contenteditable="true">sandwiches.</span>
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <div class="welcomeface"><%= image_tag("promptkuface.svg", alt: "Promptku Smiley") %></div>
<% end %>